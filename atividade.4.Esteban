using System;
class Program
{
    static void Main()
    {
        int numero;

        Console.Write("Digite um número inteiro: ");
        numero = int.Parse(Console.ReadLine());

        if (numero % 2 == 0)
        {
            Console.WriteLine("O número " + numero + " é PAR.");
        }
        else
        {
            Console.WriteLine("O número " + numero + " é ÍMPAR.");
        }
    }
}

